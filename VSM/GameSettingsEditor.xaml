                                    <DataGridTextColumn Header="ID" Binding="{Binding UnitId, Mode=TwoWay}" Visibility="Hidden"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay}" IsReadOnly="True" Width="225"/>
                                    <DataGridTextColumn Header="Level" Binding="{Binding UnitLevel, Mode=TwoWay}"/>
                                    <DataGridCheckBoxColumn Header="Unlocked" Binding="{Binding DefaultUnlocked, Mode=TwoWay}"/>
