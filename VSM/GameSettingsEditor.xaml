                                <ComboBoxItem Content="Gear Level 80 Supplies"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="2,5,2,5">
                            <TextBlock Text="Unlocked Achievements"/>
                            <DataGrid x:Name="AchievementsData" AutoGenerateColumns="False" CanUserAddRows="False" Height="200" CanUserDeleteRows="False" Margin="5,5,2,5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID, Mode=TwoWay}" Visibility="Hidden"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay}" IsReadOnly="True" Width="225"/>
                                    <DataGridCheckBoxColumn Header="Unlocked" Binding="{Binding Unlocked, Mode=TwoWay}"/>
