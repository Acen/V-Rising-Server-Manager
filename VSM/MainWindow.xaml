<Window x:Class="VRisingServerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRisingServerManager"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="V Rising Server Manager" SizeToContent="WidthAndHeight" ResizeMode="CanResize" MinWidth="600" MinHeight="500" MaxWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Onboarding Overlay -->
        <Grid x:Name="OnboardingOverlay" Visibility="Collapsed" Background="#CC222222" Panel.ZIndex="100">
            <Border Background="White" CornerRadius="10" Margin="50" BorderBrush="#FF444444" BorderThickness="2">
                <StackPanel Margin="30">
                    <!-- Step Indicators -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border x:Name="OnboardingStep1Border" BorderBrush="Blue" BorderThickness="2" CornerRadius="15" Width="30" Height="30" Margin="0,0,10,0">
                            <TextBlock Text="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <Border x:Name="OnboardingStep2Border" BorderBrush="LightGray" BorderThickness="2" CornerRadius="15" Width="30" Height="30" Margin="0,0,10,0">
                            <TextBlock Text="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Gray"/>
                        </Border>
                        <Border x:Name="OnboardingStep3Border" BorderBrush="LightGray" BorderThickness="2" CornerRadius="15" Width="30" Height="30">
                            <TextBlock Text="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="Gray"/>
                        </Border>
                    </StackPanel>

                    <!-- Step 1: Server Storage Location -->
                    <StackPanel x:Name="OnboardingStep1Panel" Visibility="Visible">
                        <TextBlock Text="Welcome to V Rising Server Manager!" FontWeight="Bold" FontSize="24" Margin="0,0,0,10" TextAlignment="Center"/>
                        <TextBlock Text="Step 1: Choose Server Storage Location" FontWeight="Bold" FontSize="18" Margin="0,0,0,15" TextAlignment="Center"/>
                        <TextBlock Text="Select where you want to store your V Rising server files:" Margin="0,0,0,20" TextAlignment="Center" FontSize="14"/>
                        <DockPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                            <TextBlock Text="Server Path:" VerticalAlignment="Center" Width="80" FontWeight="SemiBold"/>
                            <TextBox x:Name="OnboardingServerPathTextBox" Margin="10,0" IsReadOnly="True" Width="300" ToolTip="The path where the server will be installed."/>
                            <Button x:Name="OnboardingBrowsePathButton" Content="Browse" Margin="10,0" Padding="15,5"/>
                        </DockPanel>
                        <Button x:Name="OnboardingNextStep1Button" Content="Next" Width="120" Height="40" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Step 2: Select Local Save -->
                    <StackPanel x:Name="OnboardingStep2Panel" Visibility="Collapsed">
                        <TextBlock Text="Step 2: Select Local Save" FontWeight="Bold" FontSize="18" Margin="0,0,0,15" TextAlignment="Center"/>
                        <TextBlock Text="Select your existing V Rising server save directory:" Margin="0,0,0,20" TextAlignment="Center" FontSize="14"/>
                        <DockPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                            <TextBlock Text="Save Directory:" VerticalAlignment="Center" Width="100" FontWeight="SemiBold"/>
                            <TextBox x:Name="OnboardingSaveFileTextBox" Margin="10,0" IsReadOnly="True" Width="250" ToolTip="The path to your existing V Rising save directory."/>
                            <Button x:Name="OnboardingSelectSaveButton" Content="Browse" Margin="10,0" Padding="15,5"/>
                        </DockPanel>
                        <DockPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                        <Button x:Name="OnboardingBackStep2Button" Content="Back" Width="100" Height="30" Margin="15"/>
                            <Button x:Name="OnboardingImportSelectedButton" Content="Next" Width="100" Height="30" Margin="15"/>
                        </DockPanel>
                        
                    </StackPanel>

                    <!-- Step 3: Complete Setup -->
                    <StackPanel x:Name="OnboardingStep3Panel" Visibility="Collapsed">
                        <TextBlock Text="Step 3: Complete Setup" FontWeight="Bold" FontSize="18" Margin="0,0,0,15" TextAlignment="Center"/>
                        <TextBlock Text="Your V Rising Server Manager is ready to use!" Margin="0,0,0,20" TextAlignment="Center" FontSize="14"/>
                        <TextBlock x:Name="OnboardingSetupSummaryText" Text="Setup Summary:" Margin="0,0,0,10" TextAlignment="Center" FontWeight="SemiBold"/>
                        <Button x:Name="OnboardingCompleteButton" Content="Get Started" Width="150" Height="45" Margin="0,20,0,0" HorizontalAlignment="Center"/>
                        <Button x:Name="OnboardingBackStep3Button" Content="Back" Width="100" Height="30" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <TabControl x:Name="ServerTabControl" Grid.Row="0" ItemsSource="{Binding Servers}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding Name}" Grid.Column="0"/>

                        <Image Grid.Column="1" Stretch="None" Margin="2,0,0,0">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Runtime.State}" Value="Running">
                                            <Setter Property="Source" Value="Resources\StatusRunning.png"/>
                                            <Setter Property="ToolTip" Value="Running"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Runtime.State}" Value="Stopped">
                                            <Setter Property="Source" Value="Resources\StatusStopped.png"/>
                                            <Setter Property="ToolTip" Value="Stopped"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Runtime.State}" Value="Updating">
                                            <Setter Property="Source" Value="Resources\DownloadNoColor.png"/>
                                            <Setter Property="ToolTip" Value="Updating"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                        <Button Grid.Column="1" Click="RemoveServerButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Path Data="M0,0 L8,8 M8,0 L0,8" StrokeThickness="3" VerticalAlignment="Center" Margin="5,4,0,2" ToolTip="Remove server">
                                        <Path.Style>
                                            <Style TargetType="{x:Type Path}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="False">
                                                        <Setter Property="Stroke" Value="Red" />
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Stroke" Value="DarkRed" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </DockPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <GroupBox Header="Launch Settings" Margin="5" Grid.Column="0">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="Server Name:" VerticalAlignment="Center" Width="90"/>
                                    <TextBox Text="{Binding LaunchSettings.DisplayName, Mode=TwoWay}" Width="300" ToolTip="The name of the server displayed in the server list."/>
                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock Text="World Name:" VerticalAlignment="Center" Width="90"/>
                                    <TextBox Text="{Binding LaunchSettings.WorldName, Mode=TwoWay}" Width="300" ToolTip="The name of the directory where the world will be saved. Does not have to be changed unless you know what you are doing."/>
                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
                                    <CheckBox x:Name="BindToIPCheck" Content="Bind to IP" IsChecked="{Binding LaunchSettings.BindToIP}" ToolTip="If the server should bind to a specific IP address."/>
                                    <TextBox HorizontalAlignment="Right" Text="{Binding LaunchSettings.BindingIP, Mode=TwoWay}" Width="250" IsEnabled="{Binding IsChecked, ElementName=BindToIPCheck}" ToolTip="The IP address to bind the server to."/>
                                </DockPanel>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Server Management" Grid.Column="1" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <ui:ToggleSwitch Header="Auto Restart" Grid.Row="0" Margin="5" Width="100" Grid.Column="0" HorizontalAlignment="Center" IsOn="{Binding AutoRestart, Mode=TwoWay}" ToolTip="If the server should automatically restart after an unexpected crash."/>
                                <DockPanel Grid.Column="1">
                                    <ui:ToggleSwitch Header="Status" Grid.Row="0" Margin="5" Width="110" Grid.Column="1" HorizontalAlignment="Center" IsHitTestVisible="False">
                                        <ui:ToggleSwitch.Style>
                                            <Style TargetType="{x:Type ui:ToggleSwitch}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Running">
                                                        <Setter Property="IsOn" Value="True"/>
                                                        <Setter Property="OffContent" Value="Off"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Stopped">
                                                        <Setter Property="IsOn" Value="False"/>
                                                        <Setter Property="OffContent" Value="Off"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Updating">
                                                        <Setter Property="IsOn" Value="False"/>
                                                        <Setter Property="OffContent" Value="Updating"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:ToggleSwitch.Style>
                                    </ui:ToggleSwitch>
                                    <ui:ProgressRing>
                                        <ui:ProgressRing.Style>
                                            <Style TargetType="{x:Type ui:ProgressRing}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Running">
                                                        <Setter Property="IsActive" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Stopped">
                                                        <Setter Property="IsActive" Value="False"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Updating">
                                                        <Setter Property="IsActive" Value="True"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:ProgressRing.Style>
                                    </ui:ProgressRing>
                                </DockPanel>
                                <StackPanel Grid.Column="0" Grid.Row="1">

                                    <Button Margin="2" Click="StartServerButton_Click" ToolTip="Starts the game server." HorizontalAlignment="Stretch">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Running">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Stopped">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Updating">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <DockPanel>
                                            <Image Source="Resources\Play.png" Margin="5,0,0,0" Stretch="None"/>
                                            <TextBlock Text="Start Server" Margin="5,0,5,0"/>
                                        </DockPanel>
                                    </Button>

                                    <Button Margin="2" Click="UpdateServerButton_Click" ToolTip="Updates the game server." HorizontalAlignment="Stretch">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Running">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Stopped">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Updating">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <DockPanel>
                                            <Image Source="Resources\Refresh.png" Margin="5,0,0,0" Stretch="None"/>
                                            <TextBlock Text="Update Server" Margin="5,0,5,0"/>
                                        </DockPanel>
                                    </Button>

                                    <Button Margin="2" ToolTip="Opens the RCON Console for the selected server." Click="RconServerButton_Click" HorizontalAlignment="Stretch">
                                        <Button.Content>
                                            <DockPanel>
                                                <Image Source="Resources\Console.png" Margin="5,0,0,0" Stretch="None"/>
                                                <TextBlock Text="RCON Console" Margin="5,0,5,0"/>
                                            </DockPanel>
                                        </Button.Content>
                                    </Button>

                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1">

                                    <Button Margin="2" Click="StopServerButton_Click" ToolTip="Stops the game server." HorizontalAlignment="Stretch">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Running">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Stopped">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Runtime.State}" Value="Updating">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <DockPanel>
                                            <Image Source="Resources\Stop.png" Margin="5,0,0,0" Stretch="None"/>
                                            <TextBlock Text="Stop Server" Margin="5,0,5,0"/>
                                        </DockPanel>                                        
                                    </Button>

                                    <Button Margin="2" Click="ServerFolderButton_Click" ToolTip="Opens the game server folder." HorizontalAlignment="Stretch">
                                        <Button.Content>
                                            <DockPanel>
                                                <Image Source="Resources\FolderOpened.png" Margin="5,0,0,0" Stretch="None"/>
                                                <TextBlock Text="Server Folder" Margin="5,0,5,0"/>
                                            </DockPanel>
                                        </Button.Content>
                                    </Button>

                                    <Button Margin="2" Click="ManageAdminsButton_Click" ToolTip="Manage the administrators of the game server." HorizontalAlignment="Stretch">
                                        <Button.Content>
                                            <DockPanel>
                                                <Image Source="Resources\User.png" Stretch="None"/>
                                                <TextBlock Text="Manage Admins"/>
                                            </DockPanel>
                                        </Button.Content>
                                    </Button>

                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        <Separator x:Name="MainSeparator" Grid.Row="1"/>
        <GroupBox x:Name="EditorsGroupBox" Header="Editors and Settings" Margin="5,0,5,0" Grid.Row="2">
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button Margin="5,0,5,0" Padding="5" Click="GameSettingsEditor_Click" IsEnabled="{Binding HasServers}" ToolTip="Opens the Game Settings Editor.">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Setter Property="ToolTip" Value="Game Settings Editor is unavailable until a server has been imported or loaded."/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="ToolTip" Value="Opens the Game Settings Editor."/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <DockPanel>
                        <Image Source="Resources\EditDocument.png" Margin="0,0,5,0"/>
                        <TextBlock Text="Game Settings Editor"/>
                    </DockPanel>
                </Button>
                <Button Margin="5,0,5,0" Padding="5" Click="ServerSettingsEditorButton_Click" IsEnabled="{Binding HasServers}" ToolTip="Opens the Server Settings Editor.">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Setter Property="ToolTip" Value="Server Settings Editor is unavailable until a server has been imported or loaded."/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="ToolTip" Value="Opens the Server Settings Editor."/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <DockPanel>
                        <Image Source="Resources\EditDocument.png" Margin="0,0,5,0"/>
                        <TextBlock Text="Server Settings Editor"/>
                    </DockPanel>
                </Button>
            </StackPanel>
        </GroupBox>
        <Grid x:Name="ConsoleGrid" Grid.Row="3">
            <RichTextBox x:Name="MainMenuConsole" Grid.Row="2" Background="Black" Foreground="Lime" Grid.ColumnSpan="2" Margin="5" IsReadOnly="True"/>
        </Grid>
        <DockPanel x:Name="StatusDockPanel" Grid.Row="4">
            <StatusBar>
                <StatusBarItem HorizontalAlignment="Left">
                    <TextBlock>
                        <Run Text="Version:"/>
                        <Run Text="{Binding AppSettings.Version}"/>
                    </TextBlock>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <TextBlock Text="{Binding AppSettings.LastUpdateTime}" HorizontalAlignment="Right" Padding="5,1,5,1"/>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>

</Window>